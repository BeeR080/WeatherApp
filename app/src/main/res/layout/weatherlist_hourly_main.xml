<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/weatherlist_hourly_time_tv"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTextViewStyle"
        android:textSize="17sp"
        tools:text="19:00"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/MainTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:id="@+id/weatherlist_hourly_temp_tv"
        android:textSize="20sp"
        tools:text="20\u00B0"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"/>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weatherlist_hourly_condition_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:src="@drawable/ic_sun"
            app:tint="@color/dividerColor"/>

        <com.google.android.material.textview.MaterialTextView
        android:id="@+id/weatherlist_hourly_pop_tv"
            android:layout_marginStart="8dp"
            android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/MainTextViewStyle"
        android:includeFontPadding="false"
        android:textSize="12sp"
            tools:text="25 %" />

    </LinearLayout>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>